<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Ensure index.html is the default document -->
    <defaultDocument>
      <files>
        <clear />
        <add value="index.html" />
      </files>
    </defaultDocument>

    <!-- Useful static MIME types for modern SPAs -->
    <staticContent>
      <remove fileExtension=".webmanifest" />
      <mimeMap fileExtension=".webmanifest" mimeType="application/manifest+json" />
      <remove fileExtension=".map" />
      <mimeMap fileExtension=".map" mimeType="application/json" />
      <remove fileExtension=".woff2" />
      <mimeMap fileExtension=".woff2" mimeType="font/woff2" />
    </staticContent>

    <!-- Optional: basic security and cache control for HTML -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="Cache-Control" value="no-cache, no-store, must-revalidate" />
      </customHeaders>
    </httpProtocol>

    <!-- SPA route handling: let real files/dirs through; rewrite everything else to index.html -->
    <rewrite>
      <rules>
        <rule name="SpaFallback" stopProcessing="true">
          <match url=".*" />
          <conditions logicalGrouping="MatchAll">
            <!-- Skip API or server routes if proxied behind the same site name; adjust prefixes as needed -->
            <add input="{REQUEST_URI}" pattern="^/(api|server)/" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <action type="Rewrite" url="/index.html" appendQueryString="false" />
        </rule>
      </rules>
    </rewrite>

    <!-- Compression helps with JS/CSS bundles -->
    <urlCompression doStaticCompression="true" doDynamicCompression="true" />
    <httpErrors existingResponse="PassThrough" />
  </system.webServer>
  
  <!-- For older ASP.NET handlers on shared environments (not required, but harmless) -->
  <system.web>
    <httpRuntime relaxedUrlToFileSystemMapping="true" />
  </system.web>
</configuration>
